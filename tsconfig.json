{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", 
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "types": [],
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "../../utils/*": ["src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@structs/*": ["./src/structs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
