{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@structs/*": ["src/structs/*"],
      "@types/*": ["src/types/*"],
      "@commands/*": ["src/commands/*"],
      "@events/*": ["src/events/*"]
    },
    "types": ["node", "jest"],
    "declaration": true
  },
  "include": ["src/**/*", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}